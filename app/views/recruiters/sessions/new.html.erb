<section id="sign-in-area">

	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1 class="title-big wow fadeIn"><i class="fa fa-sign-in"></i></h1>
				<h2 class="subtitle-big">Sign-in to access your account</h2>
			</div>


			<div class="col-md-12 text-center">
				<div role="form" class="sign-in-form">
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<div class="form-inputs">
						<div class="form-group col-md-offset-4 col-md-4 col-md-offset-4 wow fadeInDown">
							<%= f.input :email, required: false, autofocus: true %>
						</div>
						<div class="form-group col-md-offset-4 col-md-4 col-md-offset-4 wow fadeInDown" data-wow-delay=".7s">
							<%= f.input :password, required: false, placeholder: "password" %>
							<%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
						</div>
					</div>

					<a class="col-md-offset-3 col-md-6 col-md-offset-3 wow fadeInUp" data-wow-delay="1s">
						<%= f.button :submit, "Log in" %>
					</a>
					<% end %>

					<%#= render "recruiters/shared/links" %>


				</div>


			</div>
		</div>
	</div>
</div>
</div>
</div>
</section>

<%= javascript_include_tag "welcome/bootstrap" %>
<%= javascript_include_tag "welcome/wow" %>
<%= javascript_include_tag "welcome/main" %>